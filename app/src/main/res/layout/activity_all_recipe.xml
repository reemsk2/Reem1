<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllRecipeActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"></androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipesAllRecipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="471dp"
        android:layout_height="387dp"
        android:layout_marginBottom="456dp"
        android:src="@drawable/breakf_nimrod_1168x657"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAllRecipe"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:backgroundTint="#094981"
        android:text="BreakFast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="145dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="552dp"
        android:layout_height="258dp"
        android:src="@drawable/images"
        tools:layout_editor_absoluteX="-67dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/btnAllRecipe"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:backgroundTint="#094981"
        android:text="Lunch"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="407dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="851dp"
        android:layout_height="277dp"
        android:src="@drawable/_90131_stock_taco_bar_food_ew_1220p_2736521__1_"
        tools:layout_editor_absoluteX="-221dp"
        tools:layout_editor_absoluteY="463dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:backgroundTint="#094981"
        android:text="Button"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="672dp"
        tools:text="Dinner" />

</androidx.constraintlayout.widget.ConstraintLayout>